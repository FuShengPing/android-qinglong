<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/proxy_pop_input_padding_horizontal"
        android:layout_marginVertical="@dimen/proxy_pop_input_margin_vertical"
        android:background="@drawable/proxy_style_white_radius"
        android:elevation="6dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/proxy_pop_input_padding_horizontal"
        android:paddingVertical="@dimen/proxy_pop_input_padding_vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/proxy_pop_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="远程地址"
            android:textColor="@color/black"
            android:textSize="@dimen/proxy_pop_input_title_size" />

        <EditText
            android:id="@+id/proxy_pop_input_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="@drawable/proxy_style_pop_input"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingHorizontal="@dimen/proxy_pop_input_value_padding_horizontal"
            android:paddingVertical="@dimen/proxy_pop_input_value_padding_vertical"
            android:textSize="@dimen/proxy_pop_input_value_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/proxy_pop_input_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/proxy_style_press"
                android:clickable="true"
                android:paddingHorizontal="@dimen/proxy_pop_input_button_padding_horizontal"
                android:paddingVertical="@dimen/proxy_pop_input_button_padding_vertical"
                android:text="取消"
                android:textColor="@color/proxy_theme" />

            <TextView
                android:id="@+id/proxy_pop_input_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/proxy_style_press"
                android:clickable="true"
                android:paddingHorizontal="@dimen/proxy_pop_input_button_padding_horizontal"
                android:paddingVertical="@dimen/proxy_pop_input_button_padding_vertical"
                android:text="确定"
                android:textColor="@color/proxy_theme" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>