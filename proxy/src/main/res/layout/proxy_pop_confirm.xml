<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/proxy_pop_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/proxy_pop_margin_horizontal"
        android:layout_marginVertical="@dimen/proxy_pop_margin_vertical"
        android:background="@drawable/proxy_style_white_radius"
        android:elevation="@dimen/proxy_pop_elevation"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/proxy_pop_input_padding_horizontal"
        android:paddingVertical="@dimen/proxy_pop_input_padding_vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/proxy_pop_confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/proxy_pop_confirm_title_size" />

        <TextView
            android:id="@+id/proxy_pop_confirm_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/proxy_pop_confirm_value_margin_vertical"
            android:paddingHorizontal="@dimen/proxy_pop_input_value_padding_horizontal"
            android:paddingVertical="@dimen/proxy_pop_input_value_padding_vertical"
            android:textSize="@dimen/proxy_pop_confirm_value_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/proxy_pop_confirm_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/proxy_pop_button_margin_right"
                android:background="@drawable/proxy_style_press"
                android:clickable="true"
                android:paddingHorizontal="@dimen/proxy_pop_button_padding_horizontal"
                android:paddingVertical="@dimen/proxy_pop_button_padding_vertical"
                android:text="取消"
                android:textColor="@color/proxy_theme" />

            <TextView
                android:id="@+id/proxy_pop_confirm_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/proxy_style_press"
                android:clickable="true"
                android:paddingHorizontal="@dimen/proxy_pop_button_padding_horizontal"
                android:paddingVertical="@dimen/proxy_pop_button_padding_vertical"
                android:text="确定"
                android:textColor="@color/proxy_theme" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>