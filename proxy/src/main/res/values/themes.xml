<resources>
    <style name="Theme.SSH" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_deep</item>
        <item name="colorPrimaryVariant">@color/blue_deep</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/theme_white_shadow</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/theme_white_shadow</item>
    </style>

    <style name="Theme.SSH.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SSH.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SSH.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>